    <LinearGradientBrush x:Key="BorderBrush" StartPoint="0.67334,1.00079" EndPoint="0.67334,-0.000793669">
        <GradientStop Color="#FF090B09" Offset="0" />
        <GradientStop Color="#FF090B09" Offset="0.551724" />
        <GradientStop Color="#FF090B09" Offset="1" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="VirtuosBorderBrush" StartPoint="0.67334,1.00079" EndPoint="0.67334,-0.000793669">
        <GradientStop Color="#FF090B09" Offset="0" />
        <GradientStop Color="#FF090B09" Offset="0.551724" />
        <GradientStop Color="#FF090B09" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>