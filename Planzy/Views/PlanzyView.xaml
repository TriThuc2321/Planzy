                                            Margin="20 0 0 10">
                                            <Label Content="Ngày đi: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <DatePicker Width="200"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                FontSize="15"
                                                VerticalAlignment="Bottom" BorderBrush="#FF5867AC"
                                                SelectedDate="{Binding SelectedDate_SellTicket}" TabIndex="4"
                                                />
