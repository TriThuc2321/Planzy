                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SanBayDi.TenSanBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

