                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 25 10"
                                                    Background="LightBlue">
                                            <Label Content="Điểm xuất phát: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <TextBox Width="240" Text="{Binding SelectedFlight_SellTicket.SanBayDi.TenSanBay}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0"
