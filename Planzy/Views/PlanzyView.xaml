                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1" Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                  
                              
                                </Grid>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="2">
                                    <StackPanel Grid.Row="1" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="Điểm xuất phát: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="200"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding DepartureList_FlightBooking, Mode=TwoWay}"
                                              SelectedItem="{Binding SelectedDeparture_FlightBooking, Mode=TwoWay}" TabIndex="2">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Id}" Width="50"/>
                                                        <TextBlock Text=" - " Width="20"/>
                                                        <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="0">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 5 25 10"
                                            Background="LightBlue">
                                        <Label Content="Mã Chuyến Bay Đã Chọn: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="150"/>
                                            <TextBox Width="150" Text="{Binding SelectedFlight.MaChuyenBay}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             IsReadOnly="True"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0" />
                                    </StackPanel>
                                </Grid>

                                    <Grid Grid.Row="1">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 25 10"
                                                    Background="LightBlue">
                                            <Label Content="Điểm xuất phát: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <TextBox Width="240" Text="{Binding SelectedFlight.SanBayDi.TenSanBay}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0"
                                                     IsReadOnly="True"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                            <Label Content="Ngày đi: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <DatePicker Width="200"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                FontSize="15"
                                                VerticalAlignment="Bottom" BorderBrush="#FF5867AC"
                                                SelectedDate="{Binding SelectedDate_FlightBooking}" TabIndex="4"
                                                />
                                        </StackPanel>
                                        
                                    </Grid>


                                  

                                </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10"
                                            Background="Wheat"
                                                    Visibility="Hidden">
                                            <Label Content="Ngày đi: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <DatePicker Width="200"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                FontSize="15"
                                                VerticalAlignment="Bottom" BorderBrush="#FF5867AC"
                                                SelectedDate="{Binding SelectedDate_FlightBooking}" TabIndex="4"
                                                />
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 20 10">
                                            <Label Content="Điểm đến: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="70"/>
                                            <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="200"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding DestinationList_FlightBooking, Mode=TwoWay}"
                                              SelectedItem="{Binding SelectedDestination_FlightBooking, Mode=TwoWay}" TabIndex="2">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Id}" Width="50"/>
                                                            <TextBlock Text=" - " Width="20"/>
                                                            <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                
                                    <Grid Grid.Row="1">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 20 10"
                                                Background="LightBlue">
                                        <Label Content="Điểm đến: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="70"/>
                                            <TextBox Width="240" Text="{Binding SelectedFlight.SanBayDen.TenSanBay}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0" 
                                                 IsReadOnly="True"/>
                                    </StackPanel>
                                </Grid>
                                    <DockPanel Grid.Row="3">
                                        <Button
                                                Content="Tìm Chuyến Bay"
                                                Height="40"
                                            FontSize="10"
                                            
                                                Width="120"
                                            FontWeight="Bold"
                                            Background="White"
                                            Margin=" 10 5 5 5"
                                            Command="{Binding searchFlightCommand_FlightBooking}"
                                                >
                                        </Button>

                                        <Button
                                                Content="Xem Tất Cả"
                                                Height="40"
                                            FontSize="10"
                                            FontWeight="Bold"
                                            Background="White"
                                                Width="90"
                                            Margin=" 10 5 5 5"
                                            Command="{Binding showAllFightsCommand_FlightBooking}"
                                                >
                                        </Button>

                                        <Button Content="Tiếp Tục"
                                                Height="40"
                                                FontSize="10"
                                                Width="90"
                                                FontWeight="Bold"
                                                Background="LightGreen"
                                                Margin="5 5 5 5"
                                                Command="{Binding ChooseContinueButtonCommand}"
                                                CommandParameter="{Binding SelectedItem,ElementName=lvsDatve}"
                                                ></Button>
                                      
                                         
                                        

                                    </DockPanel>

                                </Grid>
                        </Grid>
                        </Grid>
                        <Grid x:Name ="gr_BanVe" Visibility="{Binding IsDuocChon2.NewVisibility}">
