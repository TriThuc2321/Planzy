                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Grid>
                                <Grid Grid.Column="1" Grid.Row="1">
                                    <ListView Margin="10" Name="listviewChuyenBay" 
                                              ItemsSource="{Binding ChuyenBaysList}" 
                                              SelectedItem="{Binding ChuyenBayDaChon}" 
                                              BorderBrush="Black">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Mã" Width="90" >
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <Label HorizontalAlignment="Left"
                                                                       VerticalAlignment="Center"
                                                                       VerticalContentAlignment="Center"
                                                                       Content="{Binding MaChuyenBay}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Sân bay đi" Width="200" >
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Label HorizontalAlignment="Left" Width="50"
                                                                       VerticalAlignment="Center"
                                                                       VerticalContentAlignment="Center"
                                                                       Content="{Binding SanBayDi.Id}"/>
                                                                <Label HorizontalAlignment="Left" Width="Auto"
                                                                       VerticalAlignment="Center"
                                                                       VerticalContentAlignment="Center"
                                                                       Content=" - "/>
                                                                <Label HorizontalAlignment="Left" 
                                                                       VerticalAlignment="Center"
                                                                       VerticalContentAlignment="Center"
                                                                       Content="{Binding SanBayDi.TenSanBay}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Sân bay đến" Width="200" >
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Label HorizontalAlignment="Left" Width="50"
                                                                       VerticalAlignment="Center"
                                                                       VerticalContentAlignment="Center"
                                                                       Content="{Binding SanBayDen.Id}"/>
                                                                <Label HorizontalAlignment="Left" Width="Auto"
                                                                       VerticalAlignment="Center"
                                                                       VerticalContentAlignment="Center"
                                                                       Content=" - "/>
                                                                <Label HorizontalAlignment="Left" 
                                                                       VerticalAlignment="Center"
                                                                       VerticalContentAlignment="Center"
                                                                       Content="{Binding SanBayDen.TenSanBay}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="0">
                                    <Button Content="Thêm sân bay trung gian"
                                            Width="120"
                                            Height="20"
                                            Padding="0"
                                            Foreground="#ffffff"
                                            Command="{Binding ThemSanBayTrungGianCommand}" 
                                            Background="#FF80E66A" FontSize="10"
                                            BorderBrush="{x:Null}"
                                            Visibility="{Binding IsVisibleThemChuyenBayTrungGian}"
                                            />
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Button Content="Lưu" VerticalAlignment="Center" 
                                                Visibility="{Binding IsVisibleLuuChuyenBay}"
                                                Command="{Binding LuuSuaChuyenBayCommand}"
                                                HorizontalAlignment="Center"
                                                Width="30"
                                                Height="20"
                                                Padding="0"
                                                Foreground="#ffffff"  
                                                Background="#FF5867AC" FontSize="10" BorderBrush="{x:Null}"
                                                />
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Button Content="Sửa" VerticalAlignment="Center" 
                                                Visibility="{Binding IsVisibleSuaChuyenBay}"
                                                HorizontalAlignment="Center"
                                                Width="30"
                                                Height="20"
                                                Padding="0"
                                                Foreground="#ffffff"  
                                                Background="#FF5867AC" FontSize="10" BorderBrush="{x:Null}"
                                                Command="{Binding SuaChuyenBayCommand}"
                                                />
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <Button Content="Xóa" VerticalAlignment="Center" 
                                                Visibility="{Binding IsVisibleXoaChuyenBay}"
                                                Command="{Binding XoaChuyenBayCommand}"
                                                HorizontalAlignment="Center"
                                                Width="30"
                                                Height="20"
                                                Padding="0"
                                                Foreground="#ffffff"  
                                                Background="#FFE05050" FontSize="10" BorderBrush="{x:Null}"
                                                />
                                    </Grid>
                                    <Grid Grid.Column="3">
                                        <Button Content=" Nhận lịch bay " 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                Visibility="{Binding IsVisibleNhanLichChuyenBay}"
                                                Width="Auto"
                                                Height="30"
                                                Padding="0"
                                                Foreground="#ffffff"
                                                Command="{Binding ThemChuyenBayCommand}" 
                                                Background="#FF80E66A" FontSize="12" BorderBrush="{x:Null}"
                                                />
                                    </Grid>
                                    <Grid Grid.Column="4">
                                        <Button Content="Hủy" VerticalAlignment="Center" 
                                                Visibility="{Binding IsVisibleHuyThaoTac}"
                                                Command="{Binding HuyThemVaSuaChuyenBayCommand}"
                                                HorizontalAlignment="Center"
                                                Width="30"
                                                Height="20"
                                                Padding="0"
                                                Foreground="#ffffff"  
                                                Background="#FFE05050" FontSize="10" BorderBrush="{x:Null}"
                                                />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Name ="gr_DoanhThu" Visibility="{Binding IsDuocChon5.NewVisibility}"/>
                        <Grid Name="gr_ChiTietDatVe" Visibility="Hidden" >
                            <Button Content="Quay lại"
                                    Command="{Binding ChooseBackButtonCommand}">
                               
                            </Button>
                        </Grid>
                        <Grid x:Name ="gr_NguoiDung"  Visibility="{Binding IsDuocChon6.NewVisibility}">
                            <Grid.RowDefinitions>
                                    <RowDefinition Height="100"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Image Name="ProfilePic" Height="50" Width="50"
                                       Source="{Binding ProfilePic}"
                                       Stretch="Fill"
                                       />
                            </Grid>
                            <Grid Grid.Row="1">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="40 0 0 10">
                                        <Label Content="Hành khách"
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <Label Content="{Binding UserName}"
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           Width="250"/>
                                        
                                    </StackPanel>
                            </Grid>

                                <Grid Grid.Row="2">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="40 0 0 10">
                                        <Label Content="Gmail: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <Label Content="{Binding Gmail}"
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           Width="250"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="3">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="40 0 0 10">
                                        <Label Content="Điện thoại: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <Label Content="{Binding PhoneNumer}"
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           Width="250"/>
                                    </StackPanel>
                                </Grid>

                            <Grid Grid.Row="4">
                                <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="40 0 0 10"
                                            >
                                    <Label Content="CMND: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                    <Label Content="{Binding CMND}"
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           Width="250"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="5">
                                <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="40 0 0 10"
                                            >
                                    <Label Content="Địa chỉ: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                    <Label Content="{Binding Address}"                                          
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           Width="250"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="6">
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                    Width="250"
                                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                    Content="Vé đã mua" 
                                    Background="SkyBlue"
                                        Margin="85 0 0 0"
                                    />

                                    <Button
                                    Width="250"
                                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                    Content="Đăng xuất" 
                                    Background="SkyBlue"
                                        Margin="100 0 0 0"
                                        Command="{Binding LogOut}"
                                        />
                                    
                                </StackPanel>
                                

                            </Grid>

                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
