<UserControl x:Class="Planzy.Views.PlanzyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc ="clr-namespace:Planzy.Models.Util"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:bt ="clr-namespace:Planzy.Views" 
             xmlns:viewmodels="clr-namespace:Planzy.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:PlanzyViewModel}"            
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:chartTool ="clr-namespace:Planzy.Views" xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!--d:DataContext="{d:DesignInstance Type=viewmodels:PlanzyViewModel}"-->
    <UserControl.Resources>
        <sys:Double x:Key="TextSizeForButton" >12</sys:Double>
    </UserControl.Resources>
    <Grid Background="#FFE1F3F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button Name="btn_DatVe" Grid.Row="0" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon1.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand1}">
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_DatVe" 
                                      Kind="TicketOutline" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon1.NewForeground}"/>
                        <Label Name="lb_DatVe" 
                               Content="Đặt vé" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon1.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_BanVe" Grid.Row="1" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon2.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand2}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_BanVe" 
                                      Kind="TicketOutline" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon2.NewForeground}"/>
                        <Label Name="lb_BanVe" 
                               Content="Bán vé" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon2.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_TraCuu" Grid.Row="2" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon3.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand3}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_TraCuu" 
                                      Kind="Search" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon3.NewForeground}"/>
                        <Label Name="lb_TraCuu" 
                               Content="Tra cứu" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon3.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_NhanLich" Grid.Row="3" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon4.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand4}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_NhanLich" 
                                      Kind="AirplaneTakeoff" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon4.NewForeground}"/>
                        <Label Name="lb_NhanLich" 
                               Content="Nhận lịch" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon4.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_DoanhThu" Grid.Row="4" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon5.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand5}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_DoanhThu" Kind="ChartBoxOutline" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon5.NewForeground}"/>
                        <Label Name="lb_DoanhThu"
                               Content="Doanh thu" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon5.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_User" Grid.Row="5" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon6.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand6}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_User" Kind="Account" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon6.NewForeground}"/>
                        <Label Name="lb_User"
                               Content="Người dùng" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon6.NewForeground}"/>
                    </StackPanel>
                </Button>
             
                
            </Grid>
            <Grid Grid.Column="1" Margin="10,10, 25,10" >
                <Border BorderThickness="2" BorderBrush="#FF5867AC">
                    <Grid Background="White">
                        <Grid Name ="gr_DatVe" Visibility="{Binding IsDuocChon1.NewVisibility}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <ListView x:Name="lvsDatve" 
                                      ItemsSource="{Binding FlightSearchList_FlightBooking}" 
                                      Grid.Row="1"
                                      SelectedItem="{Binding SelectedFlight}"
                                         >
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Mã Chuyến Bay" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Background="White">
                                                        <Button Content=" Chi tiết " 
                                                                    Background="Black"
                                                                    Foreground="White"
                                                             Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                                                Command="{Binding ElementName= lvsDatve, Path= DataContext.ChooseDetailFlight}"
                                                                CommandParameter="{Binding}"
                                                            ></Button>
                                                        <TextBlock Text=" "></TextBlock>
                                                        <TextBlock Text="{Binding MaChuyenBay}"
                                                                       
                                                                       FontSize="15"></TextBlock>
                                                        <TextBlock Text="   "></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Sân Bay Đến" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SanBayDen.TenSanBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Sân Bay Đi" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SanBayDi.TenSanBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Ngày Khởi Hành" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding NgayBay}"></TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Thời Gian" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ThoiGianBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Số Vé Còn Lại" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SoGheHang1}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
