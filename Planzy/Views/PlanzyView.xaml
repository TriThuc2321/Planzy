<UserControl x:Class="Planzy.Views.PlanzyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc ="clr-namespace:Planzy.Models.Util"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:bt ="clr-namespace:Planzy.Views" 
             xmlns:viewmodels="clr-namespace:Planzy.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:PlanzyViewModel}"
             Visibility="{Binding StateOfWindow}"
             >
    <Grid Background="#FFE1F3F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="800"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button Name="btn_DatVe" Grid.Row="0" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon1.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand1}">
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_DatVe" 
                                      Kind="TicketOutline" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon1.NewForeground}"/>
                        <Label Name="lb_DatVe" 
                               Content="Đặt vé" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon1.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_BanVe" Grid.Row="1" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon2.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand2}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_BanVe" 
                                      Kind="TicketOutline" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon2.NewForeground}"/>
                        <Label Name="lb_BanVe" 
                               Content="Bán vé" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon2.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_TraCuu" Grid.Row="2" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon3.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand3}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_TraCuu" 
                                      Kind="Search" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon3.NewForeground}"/>
                        <Label Name="lb_TraCuu" 
                               Content="Tra cứu" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon3.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_NhanLich" Grid.Row="3" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon4.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand4}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_NhanLich" 
                                      Kind="AirplaneTakeoff" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon4.NewForeground}"/>
                        <Label Name="lb_NhanLich" 
                               Content="Nhận lịch" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon4.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_DoanhThu" Grid.Row="4" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon5.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand5}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_DoanhThu" Kind="ChartBoxOutline" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon5.NewForeground}"/>
                        <Label Name="lb_DoanhThu"
                               Content="Doanh thu" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon5.NewForeground}"/>
                    </StackPanel>
                </Button>
                <Button Name="btn_User" Grid.Row="5" Height="50" Padding="0,0,0,0" Background="{Binding IsDuocChon6.NewBackground}" BorderBrush="{x:Null}" Margin="5,0,5,0" Command="{Binding ChonLayoutCommand6}" >
                    <StackPanel Orientation="Horizontal" Width="150" Height="50">
                        <materialDesign:PackIcon Name="ic_User" Kind="Account" 
                                      Height="30" Width="30" 
                                      VerticalAlignment="Center" Margin="5,5,5,5"
                                      Foreground="{Binding IsDuocChon6.NewForeground}"/>
                        <Label Name="lb_User"
                               Content="Người dùng" Width="100" Height="50" 
                               VerticalAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               HorizontalAlignment="Right" 
                               HorizontalContentAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               Margin="5,5,5,5"
                               Foreground="{Binding IsDuocChon6.NewForeground}"/>
                    </StackPanel>
                </Button>
             
                
            </Grid>
            <Grid Grid.Column="1" Margin="10,10, 25,10" >
                <Border BorderThickness="2" BorderBrush="#FF5867AC">
                    <Grid Background="White">
                        <Grid Name ="gr_DatVe" Visibility="Hidden">
                           
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <ListView x:Name="lvsDatve" 
                                      ItemsSource="{Binding FlightSearchList_FlightBooking}" 
                                      Grid.Row="1"
                                      SelectedItem="{Binding SelectedFlight}"
                                         >

                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Mã Chuyến Bay" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Background="White">
                                                        <Button Content=" Show " 
                                                                    Background="Black"
                                                                    Foreground="White"
                                                             Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                                            ></Button>
                                                        <TextBlock Text=" "></TextBlock>
                                                        <TextBlock Text="{Binding MaChuyenBay}"
                                                                       
                                                                       FontSize="15"></TextBlock>
                                                        <TextBlock Text="   "></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Sân Bay Đến" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SanBayDen.TenSanBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Sân Bay Đi" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SanBayDi.TenSanBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Ngày Khởi Hành" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding NgayBay}"></TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Thời Gian" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ThoiGianBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Số Vé Còn Lại" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SoGheHang1}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1" Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Button Grid.Column="0" Grid.Row="2"
                                        Height="20"
                                        Width="26"
                                        Background="#FF5867AC" BorderBrush="{x:Null}"
                                        Grid.ColumnSpan="2"
                                        Command="{Binding DoiViTriSanBayCommand}" HorizontalAlignment="Center" 
                                        VerticalAlignment="Top"
                                        Margin="0 17 0 0"
                                        >
                                        
                                    <materialDesign:PackIcon Kind="ArrowLeftRightBold" Foreground="White"/>
                                </Button>

                                  
                                </Grid>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="2">
                                    <StackPanel Grid.Row="1" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="Điểm xuất phát: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="200"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding DepartureList_FlightBooking, Mode=TwoWay}"
                                              SelectedItem="{Binding SelectedDeparture_FlightBooking, Mode=TwoWay}" TabIndex="2">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Id}" Width="50"/>
                                                        <TextBlock Text=" - " Width="20"/>
                                                        <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="0">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 5 25 10"
                                            Background="Wheat">
                                        <Label Content="Mã Chuyến Bay Đã Chọn: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="150"/>
                                            <TextBox Width="150" Text="{Binding SelectedFlight.MaChuyenBay}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             IsReadOnly="True"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0" />
                                    </StackPanel>
                                </Grid>

                                    <Grid Grid.Row="1">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 25 10"
                                                    Background="Wheat">
                                            <Label Content="Điểm xuất phát: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <TextBox Width="240" Text="{Binding SelectedFlight.SanBayDi.TenSanBay}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0"
                                                     IsReadOnly="True"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                            <Label Content="Ngày đi: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <DatePicker Width="200"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                FontSize="15"
                                                VerticalAlignment="Bottom" BorderBrush="#FF5867AC"
                                                SelectedDate="{Binding SelectedDate_FlightBooking}" TabIndex="4"
                                                />
                                        </StackPanel>
                                        
                                    </Grid>


                                  

                                </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10"
                                            Background="Wheat"
                                                    Visibility="Hidden">
                                            <Label Content="Ngày đi: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <DatePicker Width="200"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                FontSize="15"
                                                VerticalAlignment="Bottom" BorderBrush="#FF5867AC"
                                                SelectedDate="{Binding SelectedDate_FlightBooking}" TabIndex="4"
                                                />
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 20 10">
                                            <Label Content="Điểm đến: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="70"/>
                                            <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="200"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding DestinationList_FlightBooking, Mode=TwoWay}"
                                              SelectedItem="{Binding SelectedDestination_FlightBooking, Mode=TwoWay}" TabIndex="2">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Id}" Width="50"/>
                                                            <TextBlock Text=" - " Width="20"/>
                                                            <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                
                                    <Grid Grid.Row="1">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 20 10"
                                                Background="Wheat">
                                        <Label Content="Điểm đến: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="70"/>
                                            <TextBox Width="240" Text="{Binding SelectedFlight.SanBayDen.TenSanBay}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0" 
                                                 IsReadOnly="True"/>
                                    </StackPanel>
                                </Grid>
                                    <DockPanel Grid.Row="3">
                                        <Button
                                                Content="Tìm Chuyến Bay"
                                                Height="40"
                                            FontSize="10"
                                                Width="120"
                                            Margin=" 20 5 5 5"
                                            Command="{Binding searchFlightCommand_FlightBooking}"
                                                >
                                        </Button>

                                        <Button
                                                Content="Xem Tất Cả"
                                                Height="40"
                                            FontSize="10"
                                                Width="90"
                                            Margin=" 10 5 0 5"
                                            Command="{Binding showAllFightsCommand_FlightBooking}"
                                                >
                                        </Button>

                                        <Button Content="Tiếp Tục"
                                                Height="40"
                                                FontSize="10"
                                                Width="90"
                                                HorizontalAlignment="Right"
                                                Margin="5 5 10 5"
                                                Command="{Binding ChooseContinueButtonCommand}"
                                                CommandParameter="{Binding SelectedItem,ElementName=lvsDatve}"
                                                ></Button>
                                      
                                         
                                        

                                    </DockPanel>

                                </Grid>
                        </Grid>
                        </Grid>
                        <Grid x:Name ="gr_BanVe" Visibility="Hidden">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="1">
                                <Button Grid.Column="0" Grid.Row="1"
                                        Height="20"
                                        Width="26"
                                        Background="#FF5867AC" BorderBrush="{x:Null}"
                                        Grid.ColumnSpan="2"
                                        Command="{Binding DoiViTriSanBayCommand}" HorizontalAlignment="Center" 
                                        VerticalAlignment="Top"
                                        Margin="0 17 0 0"
                                        >
                                    <materialDesign:PackIcon Kind="ArrowLeftRightBold"/>
                                </Button>
                            </Grid>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="Điểm xuất phát: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="200"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding SanBayDisList, Mode=TwoWay}"
                                              SelectedItem="{Binding SanBayDiDaChon, Mode=TwoWay}" TabIndex="2">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Id}" Width="50"/>
                                                        <TextBlock Text=" - " Width="20"/>
                                                        <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="Hành khách: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <TextBox Width="200" Text="{Binding Passenger}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="Điện thoại: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <TextBox Width="200" Text="{Binding PhoneNumber}"                                             
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="3">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="Ngày đi: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                        <DatePicker Width="200"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                FontSize="15"
                                                VerticalAlignment="Bottom" BorderBrush="#FF5867AC"
                                                SelectedDate="{Binding FlightDate}" TabIndex="4"
                                                />
                                    </StackPanel>
                                </Grid>

                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 20 10">
                                        <Label Content="Điểm đến: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="70"/>
                                        <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="240"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding SanBayDensList, Mode=TwoWay}"
                                              SelectedItem="{Binding SanBayDenDaChon, Mode=TwoWay}" TabIndex="2">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Id}" Width="50"/>
                                                        <TextBlock Text=" - " Width="20"/>
                                                        <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="CMND: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="70"/>
                                        <TextBox Width="240" Text="{Binding CMND}" 
                                             VerticalContentAlignment="Bottom"
                                             FontSize="15"
                                             FontWeight="Bold" BorderBrush="#FF5867AC" TabIndex="0" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                        <Label Content="Hạng vé: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="70"/>
                                        <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="200"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding SanBayDisList, Mode=TwoWay}"
                                              SelectedItem="{Binding SanBayDiDaChon, Mode=TwoWay}" TabIndex="2">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Id}" Width="50"/>
                                                        <TextBlock Text=" - " Width="20"/>
                                                        <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                            </Grid>
                        </Grid>
                        <Grid Name ="gr_Tracuu" Visibility="Hidden"
                              >
