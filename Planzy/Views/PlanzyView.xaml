                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding NgayBay}"></TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Thời Gian" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ThoiGianBay}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Số Vé Còn Lại" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SoGheHang1}"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1" Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>


                                </Grid>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="2">
                                        <StackPanel Grid.Row="1" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 0 0 10">
                                            <Label Content="Điểm xuất phát: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="100"/>
                                            <ComboBox materialDesign:ComboBoxAssist.ShowSelectedItem="True" 
                                              VerticalAlignment="Bottom" Width="200"
                                              Foreground="Black"
                                              FontSize="15"
                                              FontWeight="Bold" BorderBrush="#FF5867AC"
                                              ItemsSource="{Binding DepartureList_SellTicket, Mode=TwoWay}"
                                              SelectedItem="{Binding SelectedDeparture_SellTicket, Mode=TwoWay}" TabIndex="2">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Id}" Width="50"/>
                                                            <TextBlock Text=" - " Width="20"/>
                                                            <TextBlock Text="{Binding TenSanBay}" Width="130"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Row="0">
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                            Orientation="Horizontal"
                                            Margin="20 5 25 10"
                                            Background="LightBlue">
                                            <Label Content="Mã Chuyến Bay Đã Chọn: "
                                           VerticalContentAlignment="Bottom"
                                           FontWeight="Bold"
                                           Foreground="#FF5867AC"
                                           Width="150"/>
                                            <TextBox Width="150" Text="{Binding SelectedFlight_SellTicket.MaChuyenBay}" 
